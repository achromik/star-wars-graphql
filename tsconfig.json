{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": ".build",
    "preserveConstEnums": true,
    "rootDir": "./",
    "target": "esnext",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ],
  "include": ["src/**/*.ts"]
}
